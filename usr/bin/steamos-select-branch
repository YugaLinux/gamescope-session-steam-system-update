#!/usr/bin/bash

# Hook for custom OS branch script
STEAMOS_BRANCH_SCRIPT="/usr/libexec/gamescope-session-steam-system-update/system-select-branch"
if [ -x $STEAMOS_BRANCH_SCRIPT ] ; then
	# Call branch script from the OS
	${STEAMOS_BRANCH_SCRIPT} $@
else
	# Simply call shutdown on the client
	echo "rel"
fi
